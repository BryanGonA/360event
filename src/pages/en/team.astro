---
import MainLayout from "../../layouts/MainLayout.astro";
import FloralBackground from "../../components/FloralBackground.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const team = [
    { name: "Lucifer Jhones", role: t('team.role.photographer'), img: "/img/team-1.jpg" },
    { name: "Jesse Joslin", role: t('team.role.videographer'), img: "/img/team-2.jpg" },
    { name: "Richard Archer", role: t('team.role.retoucher'), img: "/img/team-3.jpg" },
    { name: "April Ryan", role: t('team.role.editor'), img: "/img/team-4.jpg" },
];
---

<MainLayout title={t('team.title') + " - 360 Events Films"}>
    <section class="page-header">
        <div class="container">
            <h1>{t('team.title')}</h1>
            <p>{t('team.heading')}</p>
        </div>
    </section>

    <section class="team-section section position-relative">
        <FloralBackground />
        <div class="container">
            <div class="team-grid">
                {
                    team.map((member) => (
                        <div class="team-card">
                            <div class="img-wrapper">
                                <img src={member.img} alt={member.name} />
                                <div class="social-overlay">
                                    <a href="#">
                                        <i class="fab fa-facebook-f" />
                                    </a>
                                    <a href="#">
                                        <i class="fab fa-twitter" />
                                    </a>
                                    <a href="#">
                                        <i class="fab fa-instagram" />
                                    </a>
                                </div>
                            </div>
                            <div class="card-content">
                                <h3>{member.name}</h3>
                                <span>{member.role}</span>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</MainLayout>

<style lang="scss">
    .page-header {
        background: url("/img/hero-2.jpg") no-repeat center center/cover;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
        position: relative;

        &::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

        .container {
            position: relative;
            z-index: 1;
        }

        h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }
    }

    .section {
        padding: 100px 0;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
    }

    .team-card {
        background: #fff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;

        &:hover {
            transform: translateY(-10px);
        }

        .img-wrapper {
            position: relative;
            overflow: hidden;
            height: 350px;

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

            .social-overlay {
                position: absolute;
                bottom: -50px;
                left: 0;
                width: 100%;
                background: rgba(212, 175, 55, 0.9);
                padding: 15px;
                display: flex;
                justify-content: center;
                gap: 20px;
                transition: bottom 0.3s ease;

                a {
                    color: #fff;
                    font-size: 1.2rem;
                    &:hover {
                        color: #000;
                    }
                }
            }
        }

        &:hover {
            .img-wrapper {
                img {
                    transform: scale(1.1);
                }
                .social-overlay {
                    bottom: 0;
                }
            }
        }

        .card-content {
            padding: 25px;
            text-align: center;

            h3 {
                font-size: 1.5rem;
                margin-bottom: 5px;
            }

            span {
                color: var(--primary-color);
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.9rem;
            }
        }
    }
</style>
