---
import MainLayout from "../../layouts/MainLayout.astro";
import FloralBackground from "../../components/FloralBackground.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const features = [
    {
        title: t('features.card1.title'),
        count: "35",
        icon: "fa-trophy",
        desc: t('features.card1.desc'),
    },
    {
        title: t('features.card2.title'),
        count: "45",
        icon: "fa-calendar-alt",
        desc: t('features.card2.desc'),
    },
    {
        title: t('features.card3.title'),
        count: "12345",
        icon: "fa-smile",
        desc: t('features.card3.desc'),
    },
    {
        title: t('features.card4.title'),
        count: "10+",
        icon: "fa-users",
        desc: t('features.card4.desc'),
    },
];
---

<MainLayout title={t('features.title') + " - 360 Events Films"}>
    <section class="page-header">
        <div class="container">
            <h1>{t('features.title')}</h1>
            <p>{t('features.heading')}</p>
        </div>
    </section>

    <section class="features-section section position-relative">
        <FloralBackground />
        <div class="container">
            <div class="features-grid">
                {
                    features.map((feature) => (
                        <div class="feature-card">
                            <div class="icon-wrapper">
                                <i class={`fas ${feature.icon}`} />
                            </div>
                            <h2 class="count">{feature.count}</h2>
                            <h3>{feature.title}</h3>
                            <p>{feature.desc}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</MainLayout>

<style lang="scss">
    .page-header {
        background: url("/img/hero-4.jpg") no-repeat center center/cover;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
        position: relative;

        &::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

        .container {
            position: relative;
            z-index: 1;
        }

        h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }
    }

    .section {
        padding: 100px 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
    }

    .feature-card {
        background: #fff;
        padding: 40px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;

        &:hover {
            transform: translateY(-10px);

            .icon-wrapper i {
                transform: rotateY(360deg);
            }
        }

        .icon-wrapper {
            width: 80px;
            height: 80px;
            background: rgba(212, 175, 55, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;

            i {
                font-size: 2.5rem;
                color: var(--primary-color);
                transition: transform 0.6s ease;
            }
        }

        .count {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        p {
            color: #666;
        }
    }
</style>
