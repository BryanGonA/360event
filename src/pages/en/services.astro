---
import MainLayout from "../../layouts/MainLayout.astro";
import FloralBackground from "../../components/FloralBackground.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const services = [
  { title: t('services.service1.title'), img: '/img/service-1.jpg', icon: 'fa-camera' },
  { title: t('services.service2.title'), img: '/img/service-2.jpg', icon: 'fa-user' },
  { title: t('services.service3.title'), img: '/img/service-3.jpg', icon: 'fa-tshirt' },
  { title: t('services.service4.title'), img: '/img/service-4.jpg', icon: 'fa-newspaper' },
];
---

<MainLayout title={t('services.title') + " - 360 Events Films"}>
  <section class="page-header">
    <div class="container">
      <h1>{t('services.title')}</h1>
      <p>{t('services.heading')}</p>
    </div>
  </section>

  <section class="services-section section position-relative">
    <FloralBackground />
    <div class="container">
      <div class="services-grid">
        {services.map((service) => (
          <div class="service-card">
            <div class="img-wrapper">
              <img src={service.img} alt={service.title} />
              <div class="overlay">
                <i class={`fas ${service.icon}`}></i>
              </div>
            </div>
            <h3>{service.title}</h3>
            <p>{t('services.cardDesc')}</p>
            <a href={lang === 'es' ? '/es/contact' : '/en/contact'} class="btn btn-primary">{t('services.learnMore')}</a>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<style lang="scss">
  .page-header {
    background: url("/img/hero-3.jpg") no-repeat center center/cover;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #fff;
    position: relative;

    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
    }

    .container {
      position: relative;
      z-index: 1;
    }

    h1 {
      font-size: 3.5rem;
      margin-bottom: 20px;
    }
  }

  .section {
    padding: 80px 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .service-card {
    background: #fff;
    padding: 20px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s;

    .img-wrapper {
      position: relative;
      overflow: hidden;
      margin-bottom: 20px;

      img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: transform 0.3s;
      }

      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(212, 175, 55, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s;

        i {
          font-size: 2rem;
          color: #fff;
        }
      }
    }

    &:hover .img-wrapper {
      img {
        transform: scale(1.1);
      }
      .overlay {
        opacity: 1;
      }
    }

    h3 {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    p {
      padding: 0 20px;
      color: #666;
      margin-bottom: 20px;
    }
  }
</style>
