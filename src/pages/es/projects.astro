---
import MainLayout from "../../layouts/MainLayout.astro";
import FloralBackground from "../../components/FloralBackground.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const projects = [
    { title: t('projects.category.wedding'), img: "/img/project-1.jpg", category: t('projects.category.wedding') },
    { title: t('projects.category.portrait'), img: "/img/project-2.jpg", category: t('projects.category.portrait') },
    { title: t('projects.category.fashion'), img: "/img/project-3.jpg", category: t('projects.category.fashion') },
    { title: t('projects.category.travel'), img: "/img/project-4.jpg", category: t('projects.category.travel') },
    { title: t('projects.category.wedding'), img: "/img/project-5.jpg", category: t('projects.category.wedding') },
    { title: t('projects.category.portrait'), img: "/img/project-6.jpg", category: t('projects.category.portrait') },
    { title: t('projects.category.fashion'), img: "/img/project-7.jpg", category: t('projects.category.fashion') },
    { title: t('projects.category.travel'), img: "/img/project-8.jpg", category: t('projects.category.travel') },
];
---

<MainLayout title={t('projects.title') + " - 360 Events Films"}>
    <section class="page-header">
        <div class="container">
            <h1>{t('projects.title')}</h1>
            <p>{t('projects.heading')}</p>
        </div>
    </section>

    <section class="projects-section section position-relative">
        <FloralBackground />
        <div class="container">
            <div class="projects-grid" id="gallery">
                {
                    projects.map((project) => (
                        <a
                            href={project.img}
                            data-pswp-width="800"
                            data-pswp-height="600"
                            target="_blank"
                            class="project-item"
                        >
                            <div class="img-wrapper">
                                <img src={project.img} alt={project.title} />
                                <div class="overlay">
                                    <div class="content">
                                        <h3>{project.title}</h3>
                                        <span>{project.category}</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>
</MainLayout>

<style lang="scss">
    .page-header {
        background: url("/img/hero-1.jpg") no-repeat center center/cover;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
        position: relative;

        &::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

        .container {
            position: relative;
            z-index: 1;
        }

        h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }
    }

    .section {
        padding: 100px 0;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 30px;
    }

    .project-item {
        cursor: pointer;

        .img-wrapper {
            position: relative;
            overflow: hidden;
            border-radius: 5px;
            height: 400px;

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

            .overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                display: flex;
                align-items: center;
                justify-content: center;
                opacity: 0;
                transition: opacity 0.3s ease;

                .content {
                    text-align: center;
                    color: #fff;
                    transform: translateY(20px);
                    transition: transform 0.3s ease;

                    h3 {
                        font-size: 1.8rem;
                        margin-bottom: 5px;
                        color: var(--primary-color);
                    }

                    span {
                        font-size: 1rem;
                        text-transform: uppercase;
                        letter-spacing: 2px;
                    }
                }
            }
        }

        &:hover {
            .img-wrapper {
                img {
                    transform: scale(1.1);
                }
                .overlay {
                    opacity: 1;
                    .content {
                        transform: translateY(0);
                    }
                }
            }
        }
    }
</style>

<link
    rel="stylesheet"
    href="https://unpkg.com/photoswipe@5.4.3/dist/photoswipe.css"
/>

<script>
    import PhotoSwipeLightbox from "photoswipe/lightbox";

    const lightbox = new PhotoSwipeLightbox({
        gallery: "#gallery",
        children: "a",
        pswpModule: () => import("photoswipe"),
    });

    lightbox.init();
</script>
