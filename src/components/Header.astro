---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="header">
  <div class="container">
    <nav class="navbar">
      <a href={`/${lang}/`} class="logo">
        <img src="/img/Logo_360_events_films.png" alt="360 Events Films" />
      </a>
      <div class="nav-links">
        <a href={`/${lang}/`} class="nav-link">{t("nav.home")}</a>
        <a href={`/${lang}/about`} class="nav-link">{t("nav.about")}</a>
        <a href={`/${lang}/services`} class="nav-link">{t("nav.services")}</a>
        <a href={`/${lang}/projects`} class="nav-link">{t("nav.projects")}</a>
        <div class="dropdown">
          <button class="nav-link dropdown-btn"
            >{t("nav.pages")} <i class="fas fa-chevron-down"></i></button
          >
          <div class="dropdown-content">
            <a href={`/${lang}/team`}>{t("nav.team")}</a>
            <a href={`/${lang}/testimonials`}>{t("nav.testimonials")}</a>
            <a href={`/${lang}/features`}>{t("nav.features")}</a>
          </div>
        </div>
        <a href={`/${lang}/contact`} class="nav-link">{t("nav.contact")}</a>
      </div>
      <div class="hamburger">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </nav>
  </div>
</header>

<style lang="scss">
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: transparent;
    transition: var(--transition, all 0.3s ease);
    padding: var(--spacing-md, 20px) 0;

    &.scrolled {
      background: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      padding: var(--spacing-sm, 10px) 0;
    }
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    min-height: var(--touch-target, 48px);

    img {
      height: 45px;
      width: auto;

      @media (max-width: 768px) {
        height: 40px;
      }
    }
  }

  .nav-links {
    display: flex;
    gap: 30px;
    align-items: center;

    .nav-link {
      color: #fff;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-size: var(--font-size-sm, 0.9rem);
      text-decoration: none;
      background: none;
      border: none;
      cursor: pointer;
      font-family: inherit;
      padding: 10px 5px;
      min-height: var(--touch-target, 48px);
      display: inline-flex;
      align-items: center;
      transition: var(--transition-fast, all 0.2s ease);
      -webkit-tap-highlight-color: transparent;

      &:hover,
      &:focus {
        color: var(--primary-color);
        outline: none;
      }
    }

    .dropdown {
      position: relative;

      .dropdown-btn {
        display: flex;
        align-items: center;
        gap: 5px;
      }

      .dropdown-content {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        background: rgba(0, 0, 0, 0.95);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        min-width: 200px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        z-index: 1;
        padding: 10px 0;
        border-radius: var(--border-radius-sm, 8px);

        a {
          color: #fff;
          padding: 14px 20px;
          text-decoration: none;
          display: flex;
          align-items: center;
          min-height: var(--touch-target, 48px);
          text-transform: uppercase;
          font-size: var(--font-size-xs, 0.85rem);
          transition: var(--transition-fast, all 0.2s ease);

          &:hover,
          &:focus {
            background-color: rgba(255, 255, 255, 0.1);
            color: var(--primary-color);
          }
        }
      }

      &:hover .dropdown-content {
        display: block;
      }
    }
  }

  /* Hamburger - Touch Friendly 48x48px */
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    width: 48px;
    height: 48px;
    padding: 12px;
    border-radius: var(--border-radius-sm, 8px);
    transition: var(--transition-fast, all 0.2s ease);
    -webkit-tap-highlight-color: transparent;

    &:hover,
    &:focus {
      background: rgba(255, 255, 255, 0.1);
    }

    span {
      width: 24px;
      height: 2px;
      background: #fff;
      border-radius: 2px;
      transition: var(--transition-fast, all 0.2s ease);
    }

    &.active {
      span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 6px);
      }
      span:nth-child(2) {
        opacity: 0;
        transform: scaleX(0);
      }
      span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -6px);
      }
    }
  }

  /* Mobile Navigation */
  @media (max-width: 768px) {
    .nav-links {
      position: fixed;
      top: 0;
      right: -100%;
      height: 100vh;
      height: 100dvh; /* Dynamic viewport height for mobile */
      width: 85%;
      max-width: 320px;
      background: rgba(0, 0, 0, 0.98);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      flex-direction: column;
      justify-content: center;
      gap: 8px;
      padding: var(--spacing-xl, 40px) var(--spacing-lg, 20px);
      transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      z-index: 999;
      overflow-y: auto;

      /* Safe area support */
      padding-top: max(var(--spacing-xl, 40px), env(safe-area-inset-top));
      padding-bottom: max(var(--spacing-xl, 40px), env(safe-area-inset-bottom));

      &.active {
        right: 0;
      }

      .nav-link {
        width: 100%;
        justify-content: center;
        padding: 16px 20px;
        font-size: var(--font-size-base, 1rem);
        border-radius: var(--border-radius-sm, 8px);

        &:hover,
        &:focus {
          background: rgba(255, 255, 255, 0.05);
        }
      }

      .dropdown {
        width: 100%;

        .dropdown-content {
          position: static;
          background: transparent;
          backdrop-filter: none;
          box-shadow: none;
          padding: 0;
          padding-left: 20px;
          display: none;
          border-radius: 0;

          &.show {
            display: block;
          }

          a {
            padding: 14px 20px;
            font-size: var(--font-size-sm, 0.9rem);
          }
        }

        .dropdown-btn {
          width: 100%;
          justify-content: center;
        }
      }
    }

    .hamburger {
      display: flex;
      z-index: 1001;
    }
  }

  /* Extra small screens */
  @media (max-width: 375px) {
    .logo img {
      height: 35px;
    }
  }
</style>

<script>
  const header = document.querySelector(".header");
  const hamburger = document.querySelector(".hamburger");
  const navLinks = document.querySelector(".nav-links");
  const dropdownBtn = document.querySelector(".dropdown-btn");
  const dropdownContent = document.querySelector(".dropdown-content");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      header?.classList.add("scrolled");
    } else {
      header?.classList.remove("scrolled");
    }
  });

  hamburger?.addEventListener("click", () => {
    hamburger.classList.toggle("active");
    navLinks?.classList.toggle("active");
  });

  // Mobile dropdown toggle
  dropdownBtn?.addEventListener("click", (e) => {
    if (window.innerWidth <= 768) {
      e.preventDefault();
      dropdownContent?.classList.toggle("show");
    }
  });
</script>
